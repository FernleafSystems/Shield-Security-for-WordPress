{% set accent_style = area.slug in ['scan_results', 'scan_repairs'] ? 'background: var(--status-good);' : 'background: var(--status-info);' %}
<div class="report-section">
	<div class="report-section-header">
		<div class="report-section-accent" style="{{ accent_style }}"></div>
		<h3 class="report-section-title">{{ area.title }}</h3>
	</div>
	<div class="report-section-body">
		{{ area.content|raw }}
	</div>
</div>
