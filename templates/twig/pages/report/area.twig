<div class="row mt-3 pt-3">
	<div class="col">
		<h3 class="border-bottom rounded-1 area-title d-inline-block py-1 px-2">
			<button class="accordion-button fs-3"
					type="button"
					data-bs-toggle="collapse"
					data-bs-target="#collapse-{{ area.slug }}">
			{{ area.title }}
			</button>
		</h3>
	</div>
</div>

<div class="row">
	<div class="col-10 offset-1 pt-2">
		<div id="collapse-{{ area.slug }}" class="accordion-collapse collapse show">
			{{ area.content|raw }}
		</div>
	</div>
</div>