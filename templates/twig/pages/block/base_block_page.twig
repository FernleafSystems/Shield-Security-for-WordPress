{% extends '/pages/base.twig' %}

{% block body_start %}
<div class="px-4 my-5 text-center border-bottom">
{% endblock %}

	{% block body_header %}
		<div class="overflow-hidden" style="max-height: 30vh;">
	    <div class="container px-5">
	      <img src="{{ imgs.banner }}" class="img-fluid rounded-3 mb-4"
	           alt="Example image" width="400" loading="lazy">
	    </div>
	  </div>

		<div class="row">
	    <div class="col-lg-6 col-md-9 mx-auto">

				<h1 class="display-4 fw-bold mb-3">
					{% block block_header_title %}
						Access Restricted
					{% endblock %}
			  </h1>

	      <p class="lead mb-1">
	        {% block block_header_subtitle %}
