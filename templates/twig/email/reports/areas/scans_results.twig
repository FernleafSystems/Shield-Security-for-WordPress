{# Scan results area for email reports #}
{# Receives: scan_counts (numerically indexed array), section_title, strings #}

{% if scan_counts|length > 0 %}
	<h4 style="margin: 15px 0 5px; font-size: 14px; color: #333; border-bottom: 1px solid #ddd; padding-bottom: 4px;">
		{{ section_title }}
	</h4>
	<table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0" style="border-collapse: collapse; margin-bottom: 10px;">
		<tr>
			<td style="background-color: #f5f5f5; padding: 6px 10px; font-weight: bold; font-size: 12px; color: #555; border-bottom: 1px solid #ddd;">
				{{ strings.scan_type }}
			</td>
			<td style="background-color: #f5f5f5; padding: 6px 10px; font-weight: bold; font-size: 12px; color: #555; border-bottom: 1px solid #ddd; text-align: center; width: 80px;">
				{{ strings.count }}
			</td>
		</tr>
		{% for item in scan_counts %}
			{% set count_color = item.count > 0 ? '#cc7a00' : '#008000' %}
			<tr>
				<td style="padding: 6px 10px; font-size: 13px; color: #333; border-bottom: 1px solid #eee;">
					{{ item.name }}
				</td>
				<td style="padding: 6px 10px; font-size: 13px; border-bottom: 1px solid #eee; text-align: center; font-weight: bold; color: {{ count_color }};">
					{{ item.count }}
				</td>
			</tr>
		{% endfor %}
	</table>
{% endif %}
