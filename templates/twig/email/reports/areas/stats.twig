{# Statistics area for email reports #}
{# Receives: stats (associative array of pre-filtered stat groups), strings #}

{% if stats|length > 0 %}
	<h3 style="margin: 20px 0 10px; font-size: 16px; color: #333; border-bottom: 2px solid #008000; padding-bottom: 6px;">
		{{ strings.section_stats }}
	</h3>

	{% for group_key, group in stats %}
		{% if group.stats is defined and group.stats|length > 0 %}
			<h4 style="margin: 15px 0 5px; font-size: 14px; color: #333; border-bottom: 1px solid #ddd; padding-bottom: 4px;">
				{{ group.title }}
			</h4>
			<table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0" style="border-collapse: collapse; margin-bottom: 10px;">
				<tr>
					<td style="background-color: #f5f5f5; padding: 6px 10px; font-weight: bold; font-size: 12px; color: #555; border-bottom: 1px solid #ddd;">
						{{ strings.event }}
					</td>
					<td style="background-color: #f5f5f5; padding: 6px 10px; font-weight: bold; font-size: 12px; color: #555; border-bottom: 1px solid #ddd; text-align: center; width: 70px;">
						{{ strings.current_period }}
					</td>
					<td style="background-color: #f5f5f5; padding: 6px 10px; font-weight: bold; font-size: 12px; color: #555; border-bottom: 1px solid #ddd; text-align: center; width: 70px;">
						{{ strings.previous_period }}
					</td>
					<td style="background-color: #f5f5f5; padding: 6px 10px; font-weight: bold; font-size: 12px; color: #555; border-bottom: 1px solid #ddd; text-align: center; width: 50px;">
						{{ strings.trend }}
					</td>
				</tr>
				{% for event_key, stat in group.stats %}
					{% set row_color = '#333' %}
					{% if stat.diff_colour|default('') == 'warning' %}
						{% set row_color = '#cc7a00' %}
					{% elseif stat.diff_colour|default('') == 'success' %}
						{% set row_color = '#008000' %}
					{% endif %}
					<tr>
						<td style="padding: 6px 10px; font-size: 13px; color: #333; border-bottom: 1px solid #eee;">
							{{ stat.name }}
						</td>
						<td style="padding: 6px 10px; font-size: 13px; color: #333; border-bottom: 1px solid #eee; text-align: center;">
							{{ stat.count_current_period }}
						</td>
						<td style="padding: 6px 10px; font-size: 13px; color: #333; border-bottom: 1px solid #eee; text-align: center;">
							{{ stat.count_previous_period }}
						</td>
						<td style="padding: 6px 10px; font-size: 13px; border-bottom: 1px solid #eee; text-align: center; color: {{ row_color }};">
							{{ stat.diff_symbol_email }}
						</td>
					</tr>
				{% endfor %}
			</table>
		{% endif %}
	{% endfor %}
{% endif %}
