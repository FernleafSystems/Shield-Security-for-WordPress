{% if flags.has_repairs %}
	{% for slug,data in vars.scan_repairs %}
		{% if data.count > 0 %}
			<div class="category-header">
				<h6>{{ data.name }} ({{ data.count }})</h6>
			</div>
			{% for repair in data.repairs %}
				<div class="repair-item">
					<div class="repair-icon">&#10003;</div>
					<code>{{ repair }}</code>
				</div>
			{% endfor %}
		{% endif %}
	{% endfor %}
{% else %}
	<p class="report-empty">{{ strings.no_repairs }}</p>
{% endif %}

<div style="margin-top: 12px;">
	<a href="{{ hrefs.view_scan_results }}" target="_blank" class="report-link">{{ strings.view_scan_results }}</a>
</div>
