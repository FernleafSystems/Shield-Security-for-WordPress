{% if flags.has_stats %}
	{% for stat_type in vars.stats %}
		{% if stat_type.has_non_zero_stat %}

			<div class="row mt-4">
				<div class="col">
					<h6 class="">{{ stat_type.title }}</h6>
				</div>
			</div>

			<div class="row mt-2">
				{% for stat in stat_type.stats %}
					{% if not stat.is_zero_stat %}
						<div class="col-lg-3 col-md-4 mb-3 col-6 col-stat col-stat-{{ stat_type.neutral ? 'secondary' : stat.diff_colour }}">
							<div class="card">
								<div class="card-body ps-3 pe-2 py-2">
									<div class="overline text-muted mb-1">{{ stat.name }}</div>
									<div style="font-size: 2rem; font-weight: 700; line-height: 1.1;">
										{{ stat.count_current_period }}
									</div>
									<div class="text-muted" style="font-size: 0.75rem;">{{ strings.this_period }}</div>
									<div class="stat-card-footer text-muted d-flex align-items-center justify-content-between">
										<span>{{ strings.previous_period }}: {{ stat.count_previous_period }}</span>
										<span style="color: {% if stat.diff_colour == 'warning' %}#cc7a00{% elseif stat.diff_colour == 'success' %}#008000{% else %}#6c757d{% endif %};">
											<span class="stat-diff-symbol d-inline-block align-middle">{{ stat.diff_symbol_svg|raw }}</span>
											{{ stat.diff_symbol_plus_minus }}{{ stat.count_diff_abs }}{% if stat.diff_percentage is defined and stat.diff_percentage != 0 %} ({{ stat.diff_percentage }}%){% endif %}
										</span>
									</div>
								</div>
							</div>
						</div>
					{% endif %}
				{% endfor %}
			</div>

		{% endif %}
	{% endfor %}
{% else %}
	<p>There were no stats generated for the given reporting criteria.</p>
{% endif %}
