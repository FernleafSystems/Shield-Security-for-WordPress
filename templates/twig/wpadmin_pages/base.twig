{% block inline_styles %}
{% endblock %}

{% block top_container %}
	<div id="odp-PageContainer" class="p-2 container-fluid {{ classes.top_container|default('') }}">
		{% block h1heading %}<h1 style="height: 0; display: none">&nbsp;</h1>{% endblock %}
		{% block body %}
			<div class="row" id="odp-PageHead">
				<div class="col">
					{% block page_head %}Override this block for the header area{% endblock %}
				</div>
			</div>

			<div class="d-flex flex-row justify-content-start" id="odp-PageMain">
				{% if flags.show_sidebar_nav|default(true) %}
					<div id="apto-PageMainSide" class="d-flex flex-column">

						{% include '/wpadmin/components/page/logo_sidebar.twig' %}
						{% include '/wpadmin/components/search/super_search.twig' %}

						{% block page_main_side %}
							{% include '/wpadmin/components/page/nav_sidebar.twig' %}
						{% endblock %}
					</div>
				{% endif %}

				<div id="apto-PageMainBody-Inner" class="mt-2 flex-fill" >
					<div class="row row-cols-1">
						<div class="col">
							{% block page_main %}
							{% endblock %}
						</div>
					</div>
				</div>
			</div>

			<div class="row" id="odp-PageFoot">
				<div class="col">
					{% block page_foot %}Override this block for the footer area{% endblock %}
				</div>
			</div>
		{% endblock %}

	</div>

{% endblock %}

{% block html_placeholders %}
	{% include '/components/html/offcanvas.twig' %}
	{% include '/components/html/modal_super_search.twig' %}
	{% include '/components/html/wait_spinner.twig' %}
	{% include '/components/html/loading_placeholder.twig' %}
{% endblock %}

{% block inline_scripts %}
{% endblock %}