<div class="row" id="SectionImportExportFile">

	<div class="col mt-3">
		<div class="card">
			<div class="card-header">
				<h5 class="card-title">{{ strings.title_import_site }}</h5>
				<h6 class="card-subtitle text-muted">{{ strings.subtitle_import_site }}</h6>
			</div>
			<div class="card-body p-4">
				<form id="ImportSiteForm" class="form-horizontal icwp-wizard-form">
					<input name="wizard-step" value="import" type="hidden" />

					<div class="">
						<label class="col-form-label" for="MasterSiteUrl">{{ strings.master_site_url }}</label>
						<div class="">
							<input type="url" class="form-control"
								   name="MasterSiteUrl" id="MasterSiteUrl" placeholder="https://www...">
							<span id="helpBlock"
								  class="form-text text-muted">{{ strings.remember_include|raw }}</span>
						</div>
					</div>

					<div class="">
						<label class="col-form-label" for="MasterSiteSecretKey">{{ strings.master_site_key }}</label>
						<div class="">
							<input type="text" class="form-control" maxlength="40" minlength="40" autocomplete="off"
								   name="MasterSiteSecretKey" id="MasterSiteSecretKey"
								   placeholder="{{ strings.secret_key }}">
							<span id="helpBlock" class="form-text text-muted">{{ strings.key_found_under }}</span>
						</div>
					</div>

					<div class="">

						<label class="col-form-label" for="ShieldNetwork">{{ strings.create_network }}?</label>
						<div class="form-check">
							<div>
								<input class="form-check-input" type="radio"
									   name="ShieldNetwork" id="ShieldNetworkOn" value="Y">
								<label class="form-check-label" for="ShieldNetworkOn">{{ strings.turn_on }}</label>
							</div>
							<div>
								<input class="form-check-input" type="radio"
									   name="ShieldNetwork" id="ShieldNetworkOff" value="N">
								<label class="form-check-label" for="ShieldNetworkOff">{{ strings.turn_off }}</label>
							</div>
							<div>
								<input class="form-check-input" type="radio" aria-selected="true" checked="checked"
									   name="ShieldNetwork" id="ShieldNetworkNoChange" value="NC">
								<label class="form-check-label"
									   for="ShieldNetworkNoChange">{{ strings.no_change }}</label>
							</div>
						</div>
							<p id="helpBlock" class="form-text text-muted">
								{{ strings.network_explain|join(' ') }}
							</p>
					</div>

					<div class="">
						<label for="_confirm_site" class="col-form-label">
							<input type="checkbox" class="form-control text-end"
								   name="confirm" id="_confirm_site" value="Y" />
							{{ strings.i_understand }}
							<br />
							<small class="form-text text-muted">{{ strings.be_sure }} {{ strings.not_undone }}</small>
						</label>
					</div>

					<div class="text-end">
						<div class="">
							<button type="submit" class="btn btn-primary">{{ strings.import_options }}</button>
						</div>
					</div>

				</form>
			</div>
		</div>
	</div>

</div>

<script>
	jQuery( document ).ready( function () {
		jQuery( 'form#ImportSiteForm' ).icwpWpsfImportExport(
			{
				'ajax_import_from_site':{{ ajax.import_from_site|raw }}
			}
		);
	} );
</script>