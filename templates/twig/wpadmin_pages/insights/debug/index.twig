{% extends '/wpadmin_pages/insights/base.twig' %}

{% block page_main %}
	<div class="row">
		<div class="col">
			<a href="{{ hrefs.check_visitor_ip_source }}">Run background check for visitor IP source</a>
		</div>
	</div>
	<div class="row">
		<div class="col">
			{{ content.recent_events|raw }}
		</div>
	</div>
	<div class="row mt-3">
		{% for group_title,group in vars.debug_data %}
			<div class="col-12 insights_section">
				<h5 class="mb-3">{{ group_title }}</h5>
				<div class="card-deck">
					{% for title,section_data in group %}
						<div class="card">
							<div class="card-header">{{ title }}</div>
							<div class="card-body">
								<dl>
								{% for key,val in section_data %}
									<dt>{{ key }}</dt>
									<dd class="mb-2">
										{{ val is iterable ? val|join('<br/>')|raw : val|raw }}
									</dd>
								{% endfor %}
								</dl>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}