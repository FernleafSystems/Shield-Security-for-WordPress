{% if zone_data.diff_for_display is empty %}
	{% if flags.show_empty_zones %}
		<h3 class="my-3">{{ zone_data.title }}</h3>
		<div class="alert alert-secondary d-inline-block">
			There were no changes detected for this zone.
		</div>
	{% endif %}
{% else %}
	<h3 class="my-3">{{ zone_data.title }}</h3>
	<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-5 g-4">
		{% for item in zone_data.diff_for_display %}
			<div class="col">
		    <div class="card h-100 ">
		      <div class="card-body text-bg-light">
			      <h6 class="card-title m-0">{{ item.name|raw }}</h6>
		      </div>
	        <ul class="list-group list-group-flush" style="list-style-type: square">
						{% for row in item.rows %}
							<li class="list-group-item list-group-item-action fst-italic">
								{{ row|raw }}
							</li>
						{% endfor %}
	        </ul>
		      <div class="card-footer">
			      <a href="{{ item.link.href|raw }}" target="_blank" class="card-link">{{ item.link.text }} &rarr;</a>
		      </div>
		    </div>
		  </div>
		{% endfor %}
	</div>
{% endif %}