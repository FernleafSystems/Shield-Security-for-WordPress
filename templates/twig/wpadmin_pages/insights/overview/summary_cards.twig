<div class="row">
	<div class="col">
		<h5 class="mb-4">Shield Protection Summary</h5>
	</div>
</div>
<div class="row row-cols-2 row-cols-sm-3 row-cols-md-3 row-cols-xl-4 justify-content-center">

	{% for slug,card in vars.summary_cards %}
		<div class="col mb-4">
			<div class="card h-100 summary-card {{ card.enabled ? 'enabled':'disabled' }}">
				<div class="card-body text-center">

					{% set percent =random(0,100) %}
					<div class="pie" data-pie='{
  "colorSlice": "rgb({{ ((100-percent)*128/100)|round }},{{ (percent*128/100)|round }},0 )",
  "round": true,
  "percent": {{ percent }},
  "colorCircle": "#e6e6e6"
}'></div>
				</div>
				<div class="card-footer">
					<h6>
						<a href="{{ card.href }}" target="_blank">
							{{ card.title }}
						</a>
					</h6>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
<div class="row row-cols-2 row-cols-sm-3 row-cols-md-5 row-cols-xl-5 justify-content-center">

	{% for slug,card in vars.summary_cards %}
		<div class="col mb-4">
			<div class="card h-100 summary-card {{ card.enabled ? 'enabled':'disabled' }}">
				<div class="card-body text-center">

					<a href="{{ card.href }}" target="_blank">
						<span class="icon">
							{{ card.icon|raw }}
						</span>
					</a>
				</div>
				<div class="card-footer">
					<h6>
						<a href="{{ card.href }}" target="_blank">
							{{ card.title }}
						</a>
					</h6>
				</div>
			</div>
		</div>
	{% endfor %}
</div>