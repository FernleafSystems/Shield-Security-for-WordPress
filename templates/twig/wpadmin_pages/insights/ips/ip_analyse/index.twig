<div class="row" id="SectionIpsReview">
	<div class="col mt-3">

		<h5>{{ strings.select_ip }}</h5>
		<form class="mb-3" action="#" method="post" autocomplete="off">
			<div class="form-group row">
				<div class="col mb-2">
					<select id="IpReviewSelect" name="fIp"
							data-ajaxparams="{{ ajax.ip_review_select }}"
							class="select2picker dynamic form-control mb-2"
							style="min-width: 300px;">
						<option value="">-- {{ strings.select_ip }} --</option>
						{% for unique_ip in vars.unique_ips %}
							<option value="{{ unique_ip }}">{{ unique_ip }}</option>
						{% endfor %}
					</select>
				</div>

			</div>
		</form>

		<div id="IpSelectContent">
			<div class="alert alert-info mb-0">{{ strings.please_select }}</div>
		</div>
		<div class="d-none" id="IpReviewContent">
			<div class="alert alert-info mb-0">{{ strings.please_select }}</div>
		</div>
	</div>
</div>

{% block section_table_js %}
	<script type="text/javascript">
		jQuery( document ).ready( function () {
			jQuery( 'document' ).icwpWpsfIpAnalyse(
				{
					'ajax_build_ip_analyse':{{ ajax.build_ip_analyse|raw }},
					'ajax_ip_analyse_action':{{ ajax.ip_analyse_action|raw }}
				}
			);
		} );
	</script>
{% endblock %}