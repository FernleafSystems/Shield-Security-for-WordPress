{% extends '/wpadmin_pages/base.twig' %}

{% block h1heading %}<h1 style="display: none;">&nbsp;</h1>{% endblock %}

{% block page_head %}
	<div class="row justify-content-between mb-3 {% if not flags.is_mode_live %}bg-warning{% endif %}"
	     id="apto-PageHeader">

		<div class="col d-flex align-items-center">
			<h5 class="my-0 ms-3" id="PageTitle">
				{% block page_head_titlemenu %}
					{{ strings.page_title }}
					{% if not flags.is_mode_live %}<small class="text-white fs-6">(Staging or Debug Mode)</small>{% endif %}
				{% endblock page_head_titlemenu %}
			</h5>
		</div>

		<div class="col d-flex align-items-center" id="SearchBox">
			<select class="select2picker static" style="max-width: 100%; width: 100%" id="SearchBoxSelect"></select>
			<span class="page-header-icon ms-1" for="SearchBoxSelect">{{ imgs.svgs.search|raw }}</span>
		</div>

		<div class="col d-flex justify-content-end align-items-center">
			{% if not flags.is_whitelabelled %}
				<a href="#SGBF-open-62e5437476b962001357b06d"
				   class="page-header-item page-header-icon">{{ imgs.svgs.megaphone|raw }}</a>
			{% endif %}
			<a href="{{ hrefs.helpdesk }}" target="_blank"
			   class="page-header-item page-header-icon">{{ imgs.svgs.help|raw }}</a>

			<a href="{{ hrefs.plugin_home }}" class="page-header-item" target="_blank">
				<img class="navbar-brand me-3"
				     src="{{ imgs.logo_banner }}"
				     id="navbar-bannerlogo"
				     style=""
				>
			</a>
		</div>

	</div>
{% endblock %}

