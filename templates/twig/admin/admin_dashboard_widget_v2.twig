<div class="shield-dashboard-widget-v2">
	<div class="widget-main">
		<div class="score-column status-{{ vars.config_traffic }}">
			<div class="score-accent"></div>
			<div class="score-body">
				<div class="gauge-wrap">
					<canvas class="hero-gauge-chart"
							data-percentage="{{ vars.config_progress.totals.percentage }}"
							data-rgbs="{{ vars.config_progress.rgbs|join(',') }}"></canvas>
					<div class="gauge-score">{{ vars.config_progress.totals.percentage }} / 100</div>
				</div>
				<div class="gauge-scale">
					<span>{{ strings.critical }}</span>
					<span>{{ strings.needs_work }}</span>
					<span>{{ strings.good }}</span>
				</div>
				<div class="score-meta">
					<span class="score-label">{{ strings.config_posture }}</span>
					{% if flags.show_internal_links %}
						<a href="{{ hrefs.overview }}" class="score-link">{{ strings.view_posture }}</a>
					{% else %}
						<span class="score-link">{{ strings.view_posture }}</span>
					{% endif %}
				</div>
			</div>
		</div>

		<div class="attention-column status-{{ vars.action_traffic }}">
			{% if vars.is_all_clear %}
				<div class="attention-header is-good">
					<span class="dashicons dashicons-yes-alt status-good" aria-hidden="true"></span>
					<span class="attention-title">{{ strings.all_clear }}</span>
				</div>
				<p class="attention-all-clear">{{ strings.no_issues }}</p>
			{% else %}
				<div class="attention-header">
					<span class="dashicons dashicons-warning status-{{ vars.action_traffic }}" aria-hidden="true"></span>
					<span class="attention-title">{{ strings.needs_attention }}</span>
					<span class="attention-badge">{{ vars.action_total }}</span>
				</div>
				<div class="attention-summary">{{ vars.action_total }} {{ strings.action_items }}</div>
			{% endif %}
			<div class="attention-actions">
				{% if flags.show_internal_links %}
					<a href="{{ hrefs.scans }}" class="attention-action-link">{{ strings.view_actions }}</a>
				{% else %}
					<span class="attention-action-link">{{ strings.view_actions }}</span>
				{% endif %}
			</div>
		</div>
	</div>

	<div class="widget-footer">
		<div class="footer-left">
			{% if flags.show_internal_links %}
				<a href="{{ hrefs.overview }}" class="footer-link">{{ strings.go_to_dashboard }}</a>
			{% else %}
				<span class="footer-link">{{ strings.go_to_dashboard }}</span>
			{% endif %}
			{% if vars.last_scan_human|default('') is not empty %}
				<span class="scan-time">{{ strings.last_scan }}: {{ vars.last_scan_human }}</span>
			{% endif %}
		</div>
		<a href="#" class="refresh_widget footer-refresh">{{ strings.refresh }}</a>
	</div>
</div>
