{% extends '/components/merlin/steps/base.twig' %}

{% block slide_body_video_section_blurb %}
	{% import '/common/macros.twig' as icwp_macros %}
	<p>Half the battle in securing your WordPress site is awareness of the issues
	   and keeping on top of the latest news.</p>
	<form class="merlin-form ajax-form" autocomplete="off">
		{{ icwp_macros.formInput_Hidden( 'step_slug', vars.step_slug ) }}

		<div class="row mb-3">
			<label for="inputEmail" class="col-sm-4 col-form-label">Email</label>
	    <div class="col-sm-8">
	      <input type="email" class="form-control"
	             name="email" value="{{ vars.email }}" id="inputEmail"
	             placeholder="Email address" aria-label="Email address" />
	    </div>
		</div>
		<div class="row mb-4">
			<label for="inputFirstName" class="col-sm-4 col-form-label">Name</label>
	    <div class="col-sm-4">
		    <input type="text" class="form-control"
		           name="first_name" value="{{ vars.first_name }}" id="inputFirstName"
		           placeholder="First name" aria-label="First name" />
	    </div>
	    <div class="col-sm-4">
		    <input type="text" class="form-control"
		           name="last_name" value="{{ vars.last_name }}"
		           placeholder="Last name" aria-label="Last name" />
	    </div>
		</div>

		{{ icwp_macros.formInput_Checkbox(
			'gdpr_agree', 'Y', 'GDPR & Terms', 'I agree to GDPR and Privacy Policies',
			"By subscribing you agree to our storage and processing of your information. You can unsubscribe at any time."
			~' <a href="https://getshieldsecurity.com/policies/privacy-policy/" target="_blank">Privacy Policy</a>',
			null, false
		) }}

		<div class="row">
	    <div class="col-sm-10">
	      <button type="submit" class="btn btn-primary">Subscribe To Shield's Security Newsletter</button>
	    </div>
		</div>
	</form>

	<p class="mt-4">If there is an error in automatically subscribing you to the newsletter,
	   please <a href="{{ hrefs.email }}" target="_blank">sign up directly through our site</a>.</p>
{% endblock %}