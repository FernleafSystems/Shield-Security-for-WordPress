{% extends '/components/merlin/steps/base.twig' %}

{% block slide_body_video_section_blurb %}
	<p>Security Admin is a security layer that ensures only vetted admins may adjust your security settings,
	   while simultaneously protecting critical WP settings.</p>
	<p>It's activated by a PIN (<span class="fw-bold">that you create</span>)
	   which you then use to authenticate with the Shield plugin as required.</p>
{% endblock %}

{% block slide_body_action_area %}
	{% import '/common/macros.twig' as icwp_macros %}

	<form class="form-horizontal merlin-form ajax-form">
		{{ icwp_macros.formInput_Hidden( 'step_slug', vars.step_slug ) }}

		<div class="row mb-2">
			<div class="col">
				<h6 class="pb-1 border-bottom d-inline-block">Choose Your Security Admin PIN</h6>
			</div>
		</div>

		<div class="row">
			<div class="col">
				{{ icwp_macros.formInput_Password( 'SecAdminPIN', '', 'PIN', 'my secret PIN', "Don't forget this PIN" ) }}
				{{ icwp_macros.formInput_Password( 'SecAdminPINConfirm', '', 'Confirm PIN', 'Confirm PIN','','','my-2' ) }}
				{{ icwp_macros.formInput_Submit2( 'Turn On Security Admin', null, 'secondary', false, 'mt-2' ) }}
			</div>
		</div>

	</form>
{% endblock %}