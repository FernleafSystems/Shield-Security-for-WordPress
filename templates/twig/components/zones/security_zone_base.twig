<style>
	.security_zone .icon {
		height: 60px;
		max-height: 60px;
		color: green;
	}
	.security_zone .icon > svg {
		width: 100%;
		height: 100%;
	}
	.component-enabled-state > svg {
		width: 48px;
		height: 48px;
	}
	.title-image-container > svg {
		width: 100%;
		height: auto;
	}
</style>
<div class="security_zone">

	<div class="row">

		<div class="col-7 mt-4">
			{% for component in vars.components %}
				{{ component|raw }}
			{% endfor %}
		</div>

		<div class="col-4 mt-3">
			<div class="card">
				<div class="w-100 title-image-container p-2">
					{{ imgs.svgs.heading|raw }}
				</div>
				<div class="card-body">
					<div class="section-description">
						<div class="description h-100">
							{% for line in strings.description %}
								<p class="mb-2">{{ line }}</p>
							{% endfor %}
						</div>
					</div>
				</div>
				{% if vars.all_cfg %}
					<div class="card-footer">
						<button class="btn btn-sm {{ vars.all_cfg.classes|join(' ') }}"
								title="{{ vars.all_cfg.title }}"
								{% for key, value in vars.all_cfg.data %}data-{{ key }}="{{ value }}"{% endfor %}
						>
							<span class="svg-container">{{ vars.all_cfg.icon|raw }}</span>
							{{ vars.all_cfg.title }}
						</button>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>