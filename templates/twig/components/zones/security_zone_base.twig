			{{ strings.global_plugin_disabled }}
			<a href="javascript:{}"
			   class="{{ vars.href_global_plugin_enable.classes|join(' ') }}"
			   {% for key, value in vars.href_global_plugin_enable.data %}data-{{ key }}="{{ value }}"{% endfor %}
			>{{ strings.reenable_plugin }}</a>

		</div>
	{% endif %}

