<style>
	.security_zone .icon {
		height: 60px;
		max-height: 60px;
		color: green;
	}
	.security_zone .icon > svg {
		width: 100%;
		height: 100%;
	}
	.component-enabled-state > svg {
		width: 48px;
		height: 48px;
	}
	.title-image-container > svg {
		width: 100%;
		height: auto;
	}
</style>
<div class="security_zone">

	<div class="row">

		<div class="col-8 mt-4">
			{% for component in vars.components %}
				{{ component|raw }}
			{% endfor %}
		</div>

		<div class="col-4 mt-3">
			<div class="card">
				<div class="w-100 title-image-container p-2">
					{{ imgs.svgs.heading|raw }}
				</div>
				<div class="card-body">
					<div class="section-description">
						<div class="description h-100">
							{% for line in strings.description %}
								<p class="mb-2">{{ line }}</p>
							{% endfor %}
						</div>
					</div>
				</div>
				{% if vars.actions is not empty %}
					<div class="card-footer">
						<div class="btn-group dropstart">
							<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
									aria-expanded="false">{{ strings.actions }}</button>
							<ul class="dropdown-menu">
								{% for action in vars.actions %}
									<li>
										<a class="dropdown-item {{ action.classes|join(' ') }}"
										   title="{{ action.title }}"
										   href="{{ action.href|default('#') }}"
										   title="{{ action.title }}"
										   {% for key, value in action.data|default([]) %}data-{{ key }}="{{ value }}"{% endfor %}
										>
											<span class="svg-container me-1">{{ action.icon|raw }}</span>{{ action.title }}
										</a>
									</li>
								{% endfor %}
							</ul>
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>