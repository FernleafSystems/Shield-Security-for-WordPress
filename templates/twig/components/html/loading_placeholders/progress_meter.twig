<div class="shield_loading_placeholder">
	<div class="card" style="border: none; border-radius: 10px; overflow: hidden;">
		<div class="load-wrapper" style="height: 4px;"><div class="activity"></div></div>
		<div class="card-body">
			<div class="d-flex justify-content-between mb-3">
				<div style="flex: 1;">
					<div class="load-wrapper mb-1" style="height: 16px; width: 70%;"><div class="activity"></div></div>
					<div class="load-wrapper" style="height: 12px; width: 50%;"><div class="activity"></div></div>
				</div>
				<div class="load-wrapper" style="width: 42px; height: 42px; border-radius: 10px;"><div class="activity"></div></div>
			</div>
			<div class="d-flex align-items-center gap-2 mb-3">
				<div class="load-wrapper" style="height: 6px; flex: 1; border-radius: 3px;"><div class="activity"></div></div>
				<div class="load-wrapper" style="height: 12px; width: 50px;"><div class="activity"></div></div>
			</div>
			{% for i in 0..2 %}
				<div class="load-wrapper mb-1 {{ random(['w-100','w-75','w-50']) }}" style="height: 12px;"><div class="activity"></div></div>
			{% endfor %}
			<div class="load-wrapper mt-3" style="height: 30px; width: 110px; border-radius: 6px;"><div class="activity"></div></div>
		</div>
	</div>
</div>
