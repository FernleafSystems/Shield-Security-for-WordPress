{% block input_row %}
	<p class="shield_2fa_field_container">
		<label>
			{{ text }}
			<input type="{{ type }}"
			       name="{{ name }}"
			       value="{{ value }}"
			       class="form-control{% for class in classes|default([]) %} {{ class }}{% endfor %}"
			       id="{{ id|default(name) }}"
			       placeholder=""
			       autocomplete="off"
					{#       {% if key_field == 0 %}autofocus{% endif %} #}
					{% for datakey, dataval in datas|default([]) %}
						data-{{ datakey }}="{{ dataval }}"
					{% endfor %}
			/>
		</label>
	</p>
{% endblock %}