{% extends '/wpadmin/plugin_pages/base_inner_page.twig' %}

{% block inner_page_body %}
	<div class="row">
		<div class="col insights_section">
			<ul class="nav nav-tabs shield_body-sub-nav">

				<li class="nav-item">
					<a class="nav-link active" data-bs-toggle="tab" role="tab" href="#tabUpdates"
					   data-bs-toggle="tab">
						{{ strings.tab_changelog }}
					</a>
				</li>

				<li class="nav-item">
					<a class="nav-link" target="_blank" href="{{ hrefs.knowledgebase }}">
						{{ strings.tab_knowledgebase }}
					</a>
				</li>

				<li class="nav-item">
					<a class="nav-link" data-bs-toggle="tab" role="tab" href="#tabEvents"
					   data-bs-toggle="tab">
						{{ strings.tab_events }}
					</a>
				</li>

				{% if flags.show_free_trial %}
					<li class="nav-item">
						<a class="nav-link" role="tab" href="{{ hrefs.free_trial }}" target="_blank">
							{{ strings.tab_freetrial }}
						</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</div>

	<div class="tab-content">

		<div class="tab-pane show active" id="tabUpdates" role="tabpanel" aria-labelledby="tabUpdates">
			<div class="row">
				<div class="col pt-3" id="TabUpdates">
					{{ content.tab_changelog|raw }}
				</div>
			</div>
		</div>

		<div class="tab-pane" id="tabEvents" role="tabpanel" aria-labelledby="tabEvents">
			<div class="row">
				<div class="col pt-3" id="tabEvents">
					{{ content.tab_events|raw }}
				</div>
			</div>
		</div>

	</div>
{% endblock %}