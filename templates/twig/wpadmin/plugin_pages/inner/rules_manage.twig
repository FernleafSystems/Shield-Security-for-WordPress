{% extends '/wpadmin/plugin_pages/base_inner_page.twig' %}

{% block inner_page_body %}
	{% if flags.can_custom_rules %}
		<div class="row shield-section-datatable" id="SectionSecurityRulesTable">
			<div class="col">
				<table id="ShieldTable-SecurityRulesManager" class="table table-striped table-bordered" style="width: 100%;"></table>
			</div>
		</div>
	{% else %}
		<div class="alert alert-info d-inline-block mt-3">
			{{ strings.cant_custom_rules }}
		</div>
	{% endif %}
{% endblock %}