{% if summary|default([]) is not empty %}
	<div class="row g-2 mb-3 investigate-summary-grid">
		{% for stat in summary %}
			<div class="col-6 col-xl-3">
				<div class="card shield-card h-100 investigate-summary-card">
					<div class="shield-card-accent status-{{ stat.status|default('info') }}"></div>
					<div class="card-body py-3">
						<div class="h4 mb-1 investigate-summary-card__value">{{ stat.count|default(0) }}</div>
						<div class="text-muted small investigate-summary-card__label">{{ stat.label|default('') }}</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endif %}
