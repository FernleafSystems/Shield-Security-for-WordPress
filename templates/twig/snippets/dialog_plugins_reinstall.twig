<div class="modal micromodal-slide" id="ShieldMicroModal-Reinstall" aria-hidden="true">
	<div class="modal__overlay" tabindex="-1" data-micromodal-close>
		<div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-1-title">
			<header class="modal__header">
				<h2 class="modal__title" id="modal-1-title">
					{{ strings.are_you_sure }}
				</h2>
				<button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
			</header>
			<main class="modal__content" id="modal-1-content">
				<p>{{ strings.wp_reinstall }}</p>
				<p>{{ strings.in_case }}</p>
			</main>
			<footer class="modal__footer">
				<button class="modal__btn modal__btn-primary reinstall">{{ strings.okay_reinstall }}</button>
				<button class="modal__btn" data-micromodal-close aria-label="Close this dialog window">{{ strings.cancel }}</button>
			</footer>
		</div>
	</div>
</div>

<div class="modal micromodal-slide" id="ShieldMicroModal-ActivateReinstall" aria-hidden="true">
	<div class="modal__overlay" tabindex="-1" data-micromodal-close>
		<div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-1-title">
			<header class="modal__header">
				<h2 class="modal__title" id="modal-1-title">
					{{ strings.reinstall_first }}
				</h2>
				<button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
			</header>
			<main class="modal__content" id="modal-1-content">
				<p>{{ strings.download }}</p>
				<p>{{ strings.corrupted }}</p>
				<p>{{ strings.choose }}</p>
			</main>
			<footer class="modal__footer">
				<button class="modal__btn modal__btn-primary reinstall">{{ strings.reinstall_activate }}</button>
				<button class="modal__btn modal__btn-primary activate">{{ strings.activate_only }}</button>
				<button class="modal__btn" data-micromodal-close aria-label="Close this dialog window">{{ strings.cancel }}</button>
			</footer>
		</div>
	</div>
</div>