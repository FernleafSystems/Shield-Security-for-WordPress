{
    "name": "fernleafsystems/wp-plugin-shield",
    "description": "Shield Security for WordPress - Enterprise-grade security plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "FernleafSystems",
            "email": "support@getshieldsecurity.com"
        }
    ],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^4.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6",
        "php-stubs/wordpress-stubs": "^6.0",
        "squizlabs/php_codesniffer": "^3.8",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\": "src/lib/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Unit\\": "tests/Unit/",
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Integration\\": "tests/Integration/",
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Package\\": "tests/Package/",
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Helpers\\": "tests/Helpers/",
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Fixtures\\": "tests/fixtures/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "@php vendor/phpunit/phpunit/phpunit -c phpunit-unit.xml",
        "test:integration": "@php vendor/phpunit/phpunit/phpunit -c phpunit-integration.xml",
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf",
        "docker:test": "powershell -ExecutionPolicy Bypass -File bin/run-tests.ps1 all -Docker",
        "docker:test:unit": "powershell -ExecutionPolicy Bypass -File bin/run-tests.ps1 unit -Docker",
        "docker:test:integration": "powershell -ExecutionPolicy Bypass -File bin/run-tests.ps1 integration -Docker",
        "docker:test:package": "powershell -ExecutionPolicy Bypass -File bin/run-tests.ps1 all -Docker -Package"
    }
}
