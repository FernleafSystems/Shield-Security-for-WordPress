{
    "name": "fernleafsystems/wp-plugin-shield",
    "description": "Shield Security for WordPress - Enterprise-grade security plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "FernleafSystems",
            "email": "support@getshieldsecurity.com"
        }
    ],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^1.1",
        "yoast/wp-test-utils": "^1.2",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6",
        "php-stubs/wordpress-stubs": "^6.0",
        "squizlabs/php_codesniffer": "^3.8",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\": "src/lib/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Unit\\": "tests/Unit/",
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Integration\\": "tests/Integration/",
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Package\\": "tests/Package/",
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Helpers\\": "tests/Helpers/",
            "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Fixtures\\": "tests/fixtures/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit -c phpunit-unit.xml",
        "test:integration": "phpunit -c phpunit-integration.xml",
        "test:package": "phpunit -c phpunit.xml --testsuite Package",
        "test:smoke": "powershell -ExecutionPolicy Bypass -File bin/run-smoke-tests.ps1",
        "test:smoke:json": "powershell -Command \"$PhpPath = 'C:\\Users\\' + $env:USERNAME + '\\.config\\herd\\bin\\php83\\php.exe'; & $PhpPath vendor\\bin\\phpunit -c phpunit-unit.xml --filter PluginJsonSchemaTest --no-interaction\"",
        "test:smoke:core": "powershell -Command \"$PhpPath = 'C:\\Users\\' + $env:USERNAME + '\\.config\\herd\\bin\\php83\\php.exe'; & $PhpPath vendor\\bin\\phpunit -c phpunit-unit.xml --filter CorePluginSmokeTest --no-interaction\"",
        "test:coverage": "phpunit -c phpunit-unit.xml --coverage-html coverage/unit && phpunit -c phpunit-integration.xml --coverage-html coverage/integration",
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf"
    }
}
