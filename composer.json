{
  "name":         "fernleafsystems/wp-plugin-shield",
  "description":  "Shield Security for WordPress - Enterprise-grade security plugin",
  "type":         "wordpress-plugin",
  "license":      "GPL-2.0-or-later",
  "authors":      [
    {
      "name":  "FernleafSystems",
      "email": "support@getshieldsecurity.com"
    }
  ],
  "config":       {
    "platform":      {
      "php": "7.4"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require":      {
    "php": ">=7.4"
  },
  "require-dev":  {
    "phpunit/phpunit":                      "^9.6",
    "yoast/phpunit-polyfills":              "^4.0",
    "brain/monkey":                         "^2.6",
    "mockery/mockery":                      "^1.6",
    "php-stubs/wordpress-stubs":            "^6.0",
    "squizlabs/php_codesniffer":            "^3.8",
    "wp-coding-standards/wpcs":             "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "symfony/filesystem":                   "^5.4|^6.0|^7.0"
  },
  "autoload":     {
    "psr-4": {
      "FernleafSystems\\Wordpress\\Plugin\\Shield\\": "src/lib/src/",
      "FernleafSystems\\ShieldPlatform\\":            "infrastructure/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Unit\\":        "tests/Unit/",
      "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Integration\\": "tests/Integration/",
      "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Package\\":     "tests/Package/",
      "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Helpers\\":     "tests/Helpers/",
      "FernleafSystems\\Wordpress\\Plugin\\Shield\\Tests\\Fixtures\\":    "tests/fixtures/"
    }
  },
  "scripts":      {
    "build:config":            "@php bin/build-config.php",
    "test":                    [
      "@build:config",
      "@test:unit",
      "@test:integration"
    ],
    "test:unit":               [
      "@build:config",
      "@php vendor/phpunit/phpunit/phpunit -c phpunit-unit.xml"
    ],
    "test:integration":        [
      "@build:config",
      "@php vendor/phpunit/phpunit/phpunit -c phpunit-integration.xml"
    ],
    "phpcs":                   "phpcs",
    "phpcs:fix":               "phpcbf",
    "package-plugin":          "@php bin/package-plugin.php"
  }
}
