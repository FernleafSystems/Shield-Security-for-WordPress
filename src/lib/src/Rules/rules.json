{
  "rules": [
    {
      "name":       "Is IP Blocked",
      "slug":       "is_ip_blocked",
      "flags":      [
      ],
      "conditions": [
        {
          "action": "is_ip_blocked"
        },
        {
          "action":       "is_ip_high_reputation",
          "invert_match": true
        }
      ],
      "responses":  [
        {
          "action": "is_ip_blocked"
        }
      ]
    },
    {
      "name":       "Is XML-RPC",
      "slug":       "is_xmlrpc",
      "flags":      [
      ],
      "conditions": [
        {
          "action": "match_request_path",
          "params": {
            "is_match_regex": true,
            "match_paths":    [
              "/xmlrpc\\.php$"
            ]
          }
        },
        {
          "action": "is_xmlrpc"
        }
      ],
      "responses":  [
        {
          "action": "is_xmlrpc"
        }
      ]
    }
  ]
}